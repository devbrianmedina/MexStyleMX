<!-- background_with_stroke.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del LinearLayout -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FFFFFF" /> <!-- Color de fondo del LinearLayout -->
        </shape>
    </item>
    <!-- Contorno del LinearLayout -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#00000000" /> <!-- Color transparente para el interior del contorno -->
            <stroke
                android:width="2dp"
            android:color="#BFBFBF" /> <!-- Color del contorno -->
        </shape>
    </item>
</layer-list>
